<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.example.chiriku711.myintentapp.MainActivity">

   <Button
       android:id="@+id/btn_pindah_activity"
       android:text="Pindah activity"
       android:layout_margin="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <Button
        android:text="pindah activity dengan data"
        android:id="@+id/btn_pindah_activity_with_data"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="pindah activity dengan object"
        android:id="@+id/btn_pindah_activity_pojo"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="dial a number"
        android:id="@+id/btn_pindah_dial"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="pindah activity untuk result"
        android:id="@+id/btn_pindah_activity_for_result"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<TextView
    android:text="Hasil dari Activity"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:id="@+id/txt_hasil"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</LinearLayout>
